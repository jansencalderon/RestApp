<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="restaurant"
            type="jru.restaurantapp.model.data.Restaurant" />

        <variable
            name="view"
            type="jru.restaurantapp.ui.restaurant.form.RestaurantFormView" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="jru.restaurantapp.ui.restaurant.form.RestaurantFormActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_arrow_back_primary"
            app:titleTextColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{`Reservation at `+restaurant.restName}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_when"
                android:gravity="center_vertical"
                android:hint="When?"
                android:textColor="@color/darkGray"
                android:textSize="16sp" />"

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:onClick="@{()->view.onToday()}"
                    android:padding="6dp"
                    android:text="TODAY"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:alpha="0.5"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="/"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvTomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:onClick="@{()->view.onTomorrow()}"
                    android:padding="6dp"
                    android:text="TOMORROW"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_selector"
                    android:clickable="true"
                    android:hint="10  "
                    android:focusable="false"
                    android:inputType="number"
                    android:maxEms="2"
                    android:onClick="@{()->view.pickTime()}"
                    android:padding="10dp"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvAM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:onClick="@{()->view.onAM()}"
                    android:padding="6dp"
                    android:text="AM"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:alpha="0.5"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="/"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/tvPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:onClick="@{()->view.onPM()}"
                    android:padding="6dp"
                    android:text="PM"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/restHours"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:text="@{`Choose time between `+restaurant.restHours}"
                android:padding="6dp"
                android:textSize="12sp"/>

            <include
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                layout="@layout/divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_guest"
                android:gravity="center_vertical"
                android:hint="For how many?"
                android:padding="6dp"
                android:textColor="@color/darkGray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_selector"
                    android:hint=""
                    android:ems="2"
                    android:id="@+id/et_head_count"
                    android:inputType="number"
                    android:maxLines="3"
                    android:padding="10dp"
                    android:maxEms="3"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="person/s"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_slight_accent"
            android:clickable="true"
            android:layout_margin="6dp"
            android:id="@+id/button"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:onClick="@{()->view.sendReservation()}"
                android:text="@string/string_continue"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>
